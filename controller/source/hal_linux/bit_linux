#make the engine interface library
cd ../engineinterface
echo Making engineinterface in $PWD
make INCMC=Makefile.linux $1

#make PatchEditor
cd PatchEditorInterface
#echo Making PatchEditorInterface in $PWD
#make $1
cd ../

