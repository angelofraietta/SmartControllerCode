cd ../link_driver/hal_linux
echo Making link physical layer driver in $PWD
make INCMC=Makefile.linux $1

#make the link layer libraries
cd ../
echo Making link logical layer in $PWD
make INCMC=Makefile.linux $1

#return to original dir
cd $CURRENT_DIR

